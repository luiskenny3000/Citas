<p id="notice"><%= notice %></p>

<h1>Salones</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripción</th>
      <th>Capacidad</th>
      <th>Campus</th>
      <th>Ubicación</th>
      <th>Recursos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.name %></td>
        <td><%= room.description %></td>
        <td><%= room.capacity %></td>
        <td><%= room.center.name%></td>
        <td><%= room.location %></td>
        <td>
          <%= room.resources.map{|r| r.name}.to_sentence %>
        </td>
        <td><%= link_to 'Ver', room %></td>
        <td><%= link_to 'Ver Calendario', "/calendar?room="+room.id.to_s %></td>
        <td><%= link_to 'Editar', edit_room_path(room) %></td>
        <td><%= link_to 'Eliminar', room, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Salón', new_room_path %>
