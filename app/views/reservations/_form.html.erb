<%= form_for(reservation) do |f| %>
  <% if reservation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(reservation.errors.count, "error") %> No tiene permitido guardar esta Reservación:</h2>

      <ul>
      <% reservation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Descripción" %>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label "Docente" %>
    <%= f.select :teacher_id, options_for_select(Teacher.all.map{|c| [c.name, c.id]}), {}, {class: "", data: {"live-search": true}} %>
  </div>

  <div class="field">
    <%= f.label "Salón" %>
    <%= f.select :room_id, options_for_select(Room.all.map{|c| [c.name, c.id]}), {}, {class: "", data: {"live-search": true}} %>
  </div>

  <div class="field">
    <%= f.label "Observación" %>
    <%= f.select :observation_id, options_for_select(Observation.all.map{|c| [c.name, c.id]}), {}, {class: "", data: {"live-search": true}} %>
  </div>

  <div class="field">
    <%= f.label "Fecha" %>
    <%= f.date_select :date, :order => [:day, :month,:year], start_year:Date.today.year%>
  </div>

  <div class="field">
    <%= f.label "Hora" %>
    <%= f.number_field :hour, min:7, max:20 %>
  </div>

  <div class="actions">
    <%= f.submit "Guardar Reservación"%>
  </div>
<% end %>
