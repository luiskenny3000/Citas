<%= form_for(teacher) do |f| %>
    <% if teacher.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(teacher.errors.count, "error") %> No tiene permitido guardar este Docente:</h2>

          <ul>
            <% teacher.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label "Nombres" %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label "Apellidos" %>
      <%= f.text_field :last_name %>
    </div>

    <div class="field">
      <%= f.label "Correo Electrónico" %>
      <%= f.email_field :email %>
    </div>

    <div class="field">
      <%= f.label "Teléfono" %>
      <%= f.telephone_field :telephone %>
    </div>

    <div class="field">
      <%= f.label "Contraseña" %>
      <%= f.password_field :password %>
    </div>

    <div class="field">
      <%= f.label "Departamento" %>
      <%= f.select :department_id, options_for_select(Department.all.map { |c| ["#{c.name} - #{c.center.name}", c.id] }), {}, {class: "", data: {"live-search": true}} %>
    </div>

    <div class="actions">
      <%= f.submit "Guardar Docente" %>
    </div>
<% end %>
