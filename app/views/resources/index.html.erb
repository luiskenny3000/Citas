<p id="notice"><%= notice %></p>

<h1>Recursos</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |resource| %>
      <tr>
        <td><%= resource.name %></td>
        <td><%= link_to 'Ver', resource %></td>
        <td><%= link_to 'Editar', edit_resource_path(resource) %></td>
        <td><%= link_to 'Eliminar', resource, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Recurso', new_resource_path %>
